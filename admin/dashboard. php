<?php
session_start();
$conn = new mysqli('localhost','root','','capstone_system');

$result = $conn->query("SELECT p.id, s.name, p.title, p.status 
                        FROM proposals p 
                        JOIN students s ON p.student_id=s.id");
?>
<h2>Admin Dashboard</h2>
<table border="1" cellpadding="6">
<tr><th>Student</th><th>Title</th><th>Status</th><th>Action</th></tr>

<?php while($row = $result->fetch_assoc()) { ?>
<tr>
    <td><?= $row['name'] ?></td>
    <td><?= $row['title'] ?></td>
    <td><?= $row['status'] ?></td>
    <td>
        <a href="approve_proposal.php?id=<?= $row['id'] ?>&action=approve">Approve</a> |
        <a href="approve_proposal.php?id=<?= $row['id'] ?>&action=reject">Reject</a>
    </td>
</tr>
<?php } ?>
</table>

<a href="logout.php">Logout</a>
                       
